<div{{ attributes }}>
  {{ attach_library('mass_admin_theme/layout_paragraphs') }}
  {% if is_empty %}
    <div class="lpb-empty-container__wrapper">
      <div class="lpb-empty-container">
        <div class="lpb-empty-message">{{ empty_message }}</div>
        {{ insert_button }}
      </div>
    </div>
  {% else %}
    {% if translation_warning %}
      <div class="messages messages--status">
        {{ translation_warning }}
      </div>
    {% endif %}
    {% if node_type != 'service_page' %}
      <div class="ma__rich-text" dir="auto">
        <div class="js-lpb-component-list {{ node_type }}">
            {{ root_components }}
        </div>
      </div>
      {% else %}
        <div class="js-lpb-component-list {{ node_type }}">
          {{ root_components }}
        </div>
      {% endif %}
  {% endif %}
</div>
