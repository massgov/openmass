{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}

{% if breadcrumb %}
  {{ include('@organisms/by-template/breadcrumbs.twig', {
    breadcrumbs: {
      light: true,
      currentPage: current_page,
      links: breadcrumb,
      noBottomBorder: borderless,
    },
  }) }}
{% endif %}
