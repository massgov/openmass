{#
/**
 * @file
 * Default theme implementation to present a document media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% include "@molecules/download-link.twig" with {
  "downloadLink": {
    "iconSize": '',
    "icon": content.extra_file_icon['#markup'],
    "decorativeLink": {
      "href": url('media_entity_download.download', {'media': elements['#media'].mid.value}),
      "text": content.field_title|field_value,
      "info": '',
      "property": '',
    },
    "language": content.field_language[0]['#plain_text'],
    "size": content.calculated_file_size,
    "format": content.extra_file_extension
  }
} %}
  {% if translationLinks %}
    {% include "@organisms/by-author/inline-links.twig" with {
      "inlineLinks": translationLinks
    } %}
  {% endif %}
{{ content | without('field_title', 'calculated_file_size', 'extra_file_extension', 'extra_file_icon', 'field_language') }}
