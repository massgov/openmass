{% embed "@organisms/by-template/table-of-contents-hierarchy.twig" with {
  "tableOfContentsHierarchy": {
    "title": {
      "text": label,
      "colored": true
    }
  }
} %}

  {% block binderSection %}
    {% for item in items %}
      {% set item_content = item.content|render %}
      {% set modified_content = item_content|replace({'<li>': '<li class="ma__toc--hierarchy__link">'}) %}
      {{ modified_content|raw }}
    {% endfor %}
  {% endblock %}

{% endembed %}
