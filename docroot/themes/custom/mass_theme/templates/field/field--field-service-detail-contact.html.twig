{# Set the heading level passed through from the parent template. #}
{% set level = 3 %}
{% if element['#level'] is not empty %}
  {% set level = element['#level'] %}
{% endif %}

{% embed "@organisms/contact/contact-list.twig" with {
  "contactList": {
    "viewSpecific": false,
    "compHeading": {
      "title": "Contact",
      "sub": false,
      "color": "",
      "id": "",
      "centered": "",
      "titleContext": "",
      "sidebar": true,
      "level": level
    },
    "contacts": {
      "showMore": true,
      "hideSecondary": not secondaryItems
    }
  }
} %}
  {% block contactListContacts %}
    {# Increase heading number by 1 from the parent heading. #}
    {% set level = level + 1 %}

    {% for item in items %}
      {# Pass through the level setting with Drupal render array values. #}
      {{ item.content|merge({'#level': level}) }}
    {% endfor %}
  {% endblock %}
{% endembed %}
