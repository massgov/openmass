<h3 style="color: purple;">ELEMENT - element['#level']:  {{ element['#level'] }}</h3>

{# {{ dump(element) }} #}

{% if element['#level'] is not empty %}
  {% set level = element['#level'] + 1 %}
{% else %}
  {% set level = 2 %}
{% endif %}

{% for item in items %}
  <div class="ma__stacked-row__container" id="board-members">
    <div class="ma__stacked-row__title">
      {% set compHeading = {
        "title": item.content,
        "sub": "",
        "color": "",
        "level": level
      } %}
      {% include "@atoms/04-headings/comp-heading.twig" %}
    </div>
  </div>
{% endfor %}
