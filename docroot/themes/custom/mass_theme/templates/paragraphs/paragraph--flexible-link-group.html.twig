<div class="flexible_link_group flexible_link_group--{{ flexible_links_display_type }}">

  {% if (flexible_links_display_type == 'links') %}
    {% set items = [] %}
    {% for link in flexible_link_links %}
      {% set item = {
            "path": "@atoms/decorative-link.twig",
            "data": {
              "decorativeLink": {
                "text": link.text,
                "href": link.href
              }
            }
      } %}
      {% set items = items|merge([item])%}
    {% endfor %}
    {% include "@organisms/by-author/collapsible-content.twig" with {
      "collapsibleContent": {
        "extended": true,
        "items": [{
          "collapsibleHeader": {
            "title": flexible_link_title,
            "description": flexible_link_description
          },
          "expanded": true,
          "includes" : items
        }]
      }
    } %}
  {% endif %}

  {% if (flexible_link_description == 'buttons') %}

  {% endif %}

</div>