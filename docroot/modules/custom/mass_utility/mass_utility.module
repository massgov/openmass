/**
 * Update "Event" nodes so new field "Event Type" is set to "General Event".
 */
function mass_utility_post_update_events_event_type(&$sandbox = NULL) {
  $_ENV['MASS_FLAGGING_BYPASS'] = TRUE;

  // Set up batch variables on first run.
  if (!isset($sandbox['progress'])) {
    // This must be the first run. Initialize the sandbox.
    $sandbox['progress'] = 0;
    $sandbox['current_index'] = 0;
    $sandbox['max'] = \Drupal::entityQuery('node')
      ->condition('type', 'event')
      ->count()
      ->execute();
  }
  $batch_size = 50;
  $nids = \Drupal::entityQuery('node')
    ->condition('type', 'event')
    ->condition('nid', $sandbox['current_index'], '>')
    ->sort('nid')
    ->range(0, $batch_size)
    ->execute();
  $result = Node::loadMultiple($nids);

  foreach ($result as $node) {
    $sandbox['current_index'] = $node->id();
    /** @var Drupal\node\Entity $node */
    $node->set('field_event_type_list', 'general_event');
    $node->save();

    $sandbox['progress']++;
  }
  $sandbox['#finished'] = empty($sandbox['max']) ? 1 : ($sandbox['progress'] / $sandbox['max']);
}

/**
 * Implements hook_ENTITY_TYPE_presave().
 *
 * Provides custom handling of uploaded files within Document media entities.
 * Desired behavior for Document media entities and their uploaded files:
 * - Published Documents will have a public uploaded file.
 * - Unpublished Documents will have a private uploaded file.
 */
function mass_utility_media_presave(MediaInterface $entity) {
  if ($entity->bundle() == 'document') {
    // Loads file.
    /** @var \Drupal\file\Entity\File $file */
    $file = File::load($entity->field_upload_file->target_id);
    if ($file) {
      $file_uri = $file->getFileUri();
      /** @var \Drupal\Core\File\FileSystem $file_system */
      $file_system = \Drupal::service('file_system');
      $file_scheme = $file_system->uriScheme($file_uri);
      $file_uri_target = file_uri_target($file_uri);

      // Checks for unpublished Documents to ensure file is private.
      // Checks for published Documents to ensure file is public.
      if (!$entity->isPublished() && $file_scheme == 'public') {
        // Makes file private. File is public by default.
        $file_destination = 'private://' . $file_uri_target;
      }
      elseif ($entity->isPublished() && $file_scheme == 'private') {
        // Moves file from private to public, if necessary.
        $file_destination = 'public://' . $file_uri_target;
      }

      // Moves file as needed.
      if (!empty($file_destination)) {
        $dirname = $file_system->dirname($file_destination);
        if (!file_prepare_directory($dirname, FILE_CREATE_DIRECTORY | FILE_MODIFY_PERMISSIONS)) {
          \Drupal::logger('mass_utility')
            ->error(t('Could not prepare directory needed to move file between public and private file systems.'));
        }
        file_move($file, $file_destination);
      }
    }
  }
}

/**
 * Implements hook_file_move().
 *
 * Used in conjunction with mass_utility_media_presave(),
 * where file_move() must be used without the FILE_EXISTS_REPLACE option,
 * which leads to source file being left to linger as a temporary file.
 * file_move() calls the 'file_move' hook, which we use here to ensure
 * that the source file is deleted immediately.
 */
function mass_utility_file_move(FileInterface $file, FileInterface $source) {
  // Add temporary logging due to https://jira.mass.gov/browse/DP-16025
  $file_system = \Drupal::service('file_system');
  $msg_file = sprintf('File, Id: %s, Uri: %s Filename: %s, Realpath: %s', $file->id(), $file->getFileUri(), $file->getFilename(), $file_system->realpath($file->getFileUri()));
  $msg_source = sprintf('Source, Id: %s, Uri: %s Filename: %s, Realpath: %s', $source->id(), $source->getFileUri(), $source->getFilename(), $file_system->realpath($source->getFileUri()));
  Drupal::logger('mass_utility')->debug("$msg_file.\n\n$msg_source");

  // Delete the original if it's not in use elsewhere.
  $delete_source_document = FALSE;
  $file_references = file_get_file_references($file);
  $file_system = \Drupal::service('file_system');
  foreach ($file_references as $key => $reference) {
    // Checks for Document-related files moving between public/private schemes.
    if (
      $key == 'field_upload_file'
      && !empty($media = reset($reference['media']))
      && $media->bundle() == 'document'
      && $file_system->uriScheme($file->getFileUri()) != $file_system->uriScheme($source->getFileUri())
    ) {
      $delete_source_document = TRUE;
    }
  }
  if ($delete_source_document) {
    // Deletes old file immediately to avoid unwanted temporary file duplicates.
    // Cannot use File::delete() because $file and $source share same ID.
    file_unmanaged_delete($source->getFileUri());
  }
}

/**
 * Implements hook pathauto_alias_alter()
 */
function mass_utility_pathauto_alias_alter(&$alias, $context) {
  // Proceed only if we are operating in the context of a node entity.
  if (array_key_exists('data', $context) && array_key_exists('node', $context['data'])) {
    $node_being_aliased = $context['data']['node'];
  }

  // Append `---unpublished` to the path alias if the node is going to be unpublished.
  // For example, site.com/type/my-page becomes site.com/type/my-page---unpublished.
  // NOTE:
  // (1) Creation of unique aliases is taken care of by \Drupal\pathauto\AliasUniquifier::uniquify().
  // (2) Published content continues to get regular aliases.
  if (!empty($node_being_aliased)) {
    if (!$node_being_aliased->isPublished()) {
      $alias .= "---unpublished";
    }
  }
}

