<?php

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_FORM_ID_alter() for the bulk_download display.
 */
function mass_bulk_file_replace_form_views_form_all_documents_bulk_download_alter(array &$form, FormStateInterface $form_state, $form_id) {
  $limit = 1000;

  $form['#attached']['library'][] = 'mass_bulk_file_replace/vbo_limit';
  $form['#attached']['drupalSettings']['massBulkFileReplace']['vboLimit'] = [
    'limit' => $limit,
    'storageKey' => 'vbo-limit:all_documents:bulk_download',
    'checkboxSelector' => '.views-table tbody input.js-vbo-checkbox',
    'footerSelector' => '.vbo-view-form .vbo-operations',
  ];
}
