<?php

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function ai_content_advisor_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.ai_content_advisor':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Analyze your page content and receive AI-powered recommendations on how to improve it.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_contextual_links_view_alter().
 */
function ai_content_advisor_contextual_links_view_alter(&$element, $items) {
  if (!\Drupal::currentUser()->hasPermission('view ai content advisor reports')) {
    return;
  }

  if (isset($element['#contextual_links']['node'])) {
    $id = $element['#contextual_links']['node']['route_parameters']['node'];
    if (!empty($id)) {
      $url_params = [
        'node' => $id,
      ];

      $url = Url::fromRoute('entity.node.content_analyzer', $url_params);

      $element['#links']['ai_content_advisor'] = [
        'title' => t('Analyze Content'),
        'url'   => $url,
      ];
    }
  }
}

/**
 * Implements hook_entity_operation().
 */
function ai_content_advisor_entity_operation(EntityInterface $entity) {
  $operations = [];
  if (!\Drupal::currentUser()->hasPermission('view ai content advisor reports')) {
    return $operations;
  }

  if (!empty($entity->getEntityTypeId()) && !empty($entity->id()) && $entity->getEntityTypeId() === 'node') {
    $url_params = [
      'node' => $entity->id(),
    ];

    $url_options = [
      'query' => [
        'destination' => \Drupal::request()->getRequestUri(),
      ],
    ];

    $url = Url::fromRoute('entity.node.content_analyzer', $url_params, $url_options);

    $operations['ai_content_advisor'] = [
      'title'  => t('Analyze Content'),
      'url'    => $url,
      'weight' => 100,
    ];
  }
  return $operations;
}
