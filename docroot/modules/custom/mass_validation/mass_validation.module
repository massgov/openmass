/**
 * Validates submission values in the FORM_ID() form.
 */
function _mass_validation_form_node_info_details_form_validate(array &$form, FormStateInterface $form_state) {
  $sections = $form_state->getValue('field_info_details_sections');
  $overview_populated = FALSE;
  $section_populated = FALSE;
  $overview = $form_state->getValue('field_info_detail_overview');
  foreach ($sections as $section_key => $section) {
    if ($section_key != 'add_more') {
      // If at least 1 section is populated, validation passed.
      $section_populated = isset($section['subform']);
    }
    if (isset($section['subform']['field_section_long_form_content'])) {
      $paragraphs = $section['subform']['field_section_long_form_content'];
      foreach ($paragraphs as $paragraph_key => $paragraph) {
        $paragraph_error_string = 'field_info_details_sections][' . $section_key . '][subform][field_section_long_form_content][' . $paragraph_key . '][subform]';
        _mass_validation_validate_custom_iframe($form_state, $paragraph, $paragraph_error_string);
        if (isset($paragraph['subform']['field_caspio_data_identifier'])) {
          foreach ($paragraph['subform']['field_caspio_data_identifier'] as $caspioId) {
            if (!empty($caspioId)) {
              if (!preg_match('/^http(s)?:\/\/\w+\.caspio\.(com)(\/.*|$)/', $caspioId['value'])) {
                $form_state->setErrorByName('field_info_details_sections][' . $section_key . '][subform][field_section_long_form_content][' . $paragraph_key . '][subform][field_caspio_data_identifier', t('Only caspio.com URL allowed. See help text for this field.'));
              }
            }
          }
        }
      }
    }
  }

  if (!empty($overview[0]['value'])) {
    $overview_populated = TRUE;
  }

  if ($overview_populated === FALSE && $section_populated === FALSE) {
    $form_state->setError($form['field_info_detail_overview']['widget'][0]['value'], t('One of these fields should be populated: "Overview" or "Sections"'));
    $form_state->setErrorByName('group_content', t('One of these fields should be populated: "Overview" or "Sections"'));
  }
}
