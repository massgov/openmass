/**
 * Helper function to check if paragraph of given type is already populated.
 */
function _mass_validation_check_paragraph_bundle($node, $bundle): bool {
  switch ($node->bundle()) {
    case 'service_page':
      $section_field_label = 'field_service_sections';
      $section_content_field_label = 'field_service_section_content';
      break;

    case 'org_page':
      $section_field_label = 'field_organization_sections';
      $section_content_field_label = 'field_section_long_form_content';
      break;
  }
  if ($node->hasField($section_field_label)) {
    $p_sections = Helper::getReferencedEntitiesFromField($node, $section_field_label);
    if ($p_sections) {
      foreach ($p_sections as $p_section) {
        if ($p_section->hasField($section_content_field_label)) {
          $p_contents = Helper::getReferencedEntitiesFromField($p_section, $section_content_field_label);
          if ($p_contents) {
            foreach ($p_contents as $p_content) {
              if ($p_content->bundle() == $bundle) {
                return TRUE;
              }
            }
          }
        }
      }
    }
  }
  return FALSE;
}

/**
 * Submit handler for event nodes.
 *
 * Submit handler to add warning if there is a
 * service or organization node without event
 * component in associated pages field.
 */
function _mass_validation_form_node_event_form_submit(array &$form, FormStateInterface $form_state) {
  $associated_pages = $form_state->getValue('field_event_ref_parents');
  foreach ($associated_pages as $associated_page) {
    if (is_array($associated_page)) {
      if (isset($associated_page['target_id'])) {
        $node = Drupal::entityTypeManager()
          ->getStorage('node')
          ->load($associated_page['target_id']);
        if (in_array($node->bundle(), ['org_page', 'service_page'])) {
          if (!_mass_validation_check_paragraph_bundle($node, 'org_events')) {
            $args = [
              ':url' => $node->toUrl()->toString(),
              ':title' => $node->label(),
            ];
            Drupal::messenger()->addWarning(t('The “Events” component is missing on the page <a href=":url">:title</a>. Verify that you have the “Events” component in a section or the event will not be linked there.', $args));
          }
        }
      }
    }
  }
}

/**
 * Validates submission values in the FORM_ID() form.
 */
function _mass_validation_form_node_event_form_validate(array &$form, FormStateInterface $form_state) {

  _mass_validation_mass_link_validate($form_state, 'field_event_links');
  _mass_validation_mass_link_validate($form_state, 'field_event_participating_orgs');
  _mass_validation_mass_link_validate($form_state, 'field_event_link_sign_up');

  $num_links = 0;
  // Validate that the Links and Downloads fields
  // have no more than 6 values between them.
  if ($form_state->hasValue('field_event_links') || $form_state->hasValue('field_event_ref_downloads')) {
    // Count the links.
    $links = $form_state->getValue('field_event_links');
    foreach ($links as $link) {
      if (is_array($link)) {
        if (!empty($link['uri'])) {
          $num_links += 1;
        }
      }
    }
    // Count the documents.
    $docs = $form_state->getValue('field_event_ref_downloads');
    $num_docs = 0;
    if (!empty($docs['entities'])) {
      $num_docs = count($docs['entities']);
    }
    // Throw an error is there are more than 6.
    if (($num_links + $num_docs) > 6) {
      $form_state->setErrorByName('field_event_links', t('You can only have max 6 values between the Links and Downloads fields.'));
      $form_state->setErrorByName('field_event_ref_downloads', t('You can only have max 6 values between the Links and Downloads fields.'));
    }
  }

  // Check if the Associated Pages field is required and make sure filled in.
  $assc_pages = $form_state->getValue('field_event_ref_parents');
  $pages_count = count($assc_pages) - 1;

  // Loop through the elements and unset the NULL ones.
  for ($x = 0; $x < $pages_count; $x++) {
    if ($assc_pages[0]['target_id'] == NULL) {
      array_splice($assc_pages, 0, 1);
    }
  }

  if (!isset($assc_pages[0]) || $assc_pages[0]['target_id'] == NULL) {
    $form_state->setErrorByName('field_event_ref_parents', t('The associated pages field must be filled out.'));
  }

  // Check if the address field was required, and make sure it was filled in.
  $address_type = $form_state->getValue('field_event_address_type');
  if (!empty($address_type[0]['value'])) {
    $address_type = $address_type[0]['value'];

    // The 'unique address' option was selected.
    if ($address_type == 'unique') {
      $unique_address = $form_state->getValue('field_event_ref_unique_address');

      // Validate each paragraph.
      $set_error = FALSE;
      foreach ($unique_address as $paragraph) {
        // Verify this is a paragraph with fields.
        if (array_key_exists('subform', $paragraph)) {
          if (!array_key_exists('field_address_address', $paragraph['subform'])) {
            $set_error = TRUE;
          }
        }
        else {
          $set_error = TRUE;
        }
      }

      // If both fields are empty, throw error.
      if ($set_error == TRUE) {
        $form_state->setErrorByName('field_event_ref_unique_address', t('When using a "Unique address" the address field must be filled out.'));
      }
    }

    // The 'contact information' option was selected.
    elseif ($address_type == 'contact info') {
      $contact_address = $form_state->getValue('field_event_ref_contact');
      if (empty($contact_address[0]['target_id'])) {
        $form_state->setErrorByName('field_event_ref_contact', t('A contact item must be selected.'));
      }
    }
  }
}

