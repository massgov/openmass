/**
 * For logic needed by both flavors of Service Page node form alter.
 *
 * @param array $form
 *   The form array passed by reference.
 */
function mass_validation_service_page_alter_helper(array &$form) {
  $form['#validate'][] = '_mass_validation_form_node_service_page_form_validate';
  $form['#attached']['library'][] = 'mass_validation/service_page_edit_form';
}

/**
 * Validates service page sections (field_service_sections).
 */
function _mass_validation_service_page_sections_validate(array &$form, FormStateInterface $form_state) {
  if (!$form_state->hasValue('field_service_sections')) {
    return;
  }

  $sections = $form_state->getValue('field_service_sections');

  foreach ($sections as $section_key => $section) {
    if (!is_array($section)) {
      continue;
    }
    $paragraphs = $sections[$section_key]['subform']['field_service_section_content'] ?? [];
    foreach ($paragraphs as $key => $paragraph) {
      if (!is_int($key)) {
        continue;
      }
      $paragraph_error_string = 'field_service_sections][' . $section_key . '][subform][field_service_section_content][' . $key . '][subform]';
      _mass_validation_validate_caspio($form_state, $paragraph, $section_key, $key, 'field_service_sections', 'field_service_section_content');
      _mass_validation_validate_mosaic_items($form_state, $paragraph, $section_key, $key, 'field_service_sections', 'field_service_section_content');
      _mass_validation_validate_custom_search($form_state, $paragraph, $paragraph_error_string);
      _mass_validation_validate_custom_flexible_links($form_state, $paragraph, $paragraph_error_string);
    }
  }
}

/**
 * Validates submission values in the FORM_ID() form.
 */
function _mass_validation_form_node_service_page_form_validate(array &$form, FormStateInterface $form_state) {
  _mass_validation_service_page_sections_validate($form, $form_state);

  // Check that the KPIs have values if the box is checked.
  // Map the KPI fields with the Key performance indicators options in the form.
  $kpi_fields_mapping = [
    'sessions_clicks_pl_pct' => 'field_kpi_sessions_clicks_pl_pct',
    'pl_cl_app_starts' => 'field_kpi_pl_cl_app_starts',
    'pl_cl_app_subs' => 'field_kpi_pl_cl_app_subs',
    'pl_cl_task_rate' => 'field_kpi_pl_cl_task_rate',
    'pl_avg_cl_comp_time' => 'field_kpi_pl_avg_cl_comp_time',
    'pl_em_app_reviews' => 'field_kpi_pl_em_app_reviews',
    'pl_em_app_review_rate' => 'field_kpi_pl_em_app_review_rate',
    'pl_em_app_review_time' => 'field_kpi_pl_em_app_review_time',
  ];

  // Finding the value for the Key performance indicators (KPIs)
  $kpi_choice = $form_state->getValue('field_service_kpi_choice');
  // Checking if the KPI are checked.
  $selected_kpi = [];
  if (isset($kpi_choice)) {
    // Loop through the KPI to check for a value.
    foreach ($kpi_choice as $choice) {
      $field_name = $kpi_fields_mapping[$choice['value']];
      $selected_kpi[] = $field_name;
      $value = $form_state->getValue($field_name);
      // If the KPI value is empty the error will be shown.
      if (empty($value[0]['value'])) {
        $form_state->setErrorByName($field_name, t('A value must be added to the this field.'));
      }
    }
    // Take the unchecked checkboxes and reset the value to NULL.
    $unchecked = array_diff($kpi_fields_mapping, $selected_kpi);
    foreach ($unchecked as $unchecked_field_name) {
      $form_state->setValue([$unchecked_field_name, 0, 'value'], NULL);
    }
  }
}

